{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "background": true,
      "link": true,
      "text": true,
      "custom": true,
      "customDuotone": true,
      "customGradient": false,
      "defaultDuotone": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "palette": [
        {
          "color": "#ffffff",
          "name": "Cloud",
          "slug": "cloud"
        },
        {
          "color": "#3e0e58",
          "name": "Orris",
          "slug": "orris"
        },
        {
          "color": "#3c3a41",
          "name": "Stone",
          "slug": "stone"
        },
        {
          "color": "#636267",
          "name": "Pebble",
          "slug": "pebble"
        },
        {
          "color": "#a0286b",
          "name": "Berry Root",
          "slug": "berry-root"
        },
        {
          "color": "#752b57",
          "name": "Berry Slate",
          "slug": "berry-slate"
        },
        {
          "color": "#c48da2",
          "name": "Berry Fog",
          "slug": "berry-fog"
        },
        {
          "color": "#faf7fc",
          "name": "Grape Glow",
          "slug": "grape-glow"
        },
        ,
        {
          "color": "#d9c4ec",
          "name": "Grape Dollop",
          "slug": "grape-dollop"
        },
        {
          "color": "#c4e49a",
          "name": "Apple Dollop",
          "slug": "apple-dollop"
        },
        {
          "color": "#ffb79a",
          "name": "Peach Dollop",
          "slug": "peach-dollop"
        },
        {
          "color": "#f4c3d4",
          "name": "Raspberry Dollop",
          "slug": "raspberry-dollop"
        },
        {
          "color": "#bce9eb",
          "name": "Blueberry Dollop",
          "slug": "blueberry-dollop"
        },
        {
          "color": "#fff4a5",
          "name": "Lemon Dollop",
          "slug": "lemon-dollop"
        }
      ]
    },
    "spacing": {
      "blockGap": true,
      "margin": true,
      "padding": true,
      "customSpacingSize": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "layout": {
      "contentSize": "1360px"
    },
    "typography": {
      "lineHeight": true,
      "fluid": true,
      "fontFamilies": [
        {
          "name": "Primary - HK",
          "slug": "primary",
          "fontFamily": "'HK Grotesk', sans-serif",
          "fontFace": [
            {
              "fontFamily": "HK Grotesk",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/HankenGrotesk-VariableFont_wght.woff2"]
            },
                        {
              "fontFamily": "HK Grotesk",
              "fontStyle": "italic",
              "fontWeight": "100 900",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/HankenGrotesk-Italic-VariableFont_wght.woff2"]
            }
          ]
        },
        {
          "name": "Header - Playfair",
          "slug": "header",
          "fontFamily": "'Playfair Display', serif",
          "fontFace": [
            {
              "fontFamily": "Playfair Display",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/PlayfairDisplay.woff2"]
            },
                        {
              "fontFamily": "Playfair Display",
              "fontStyle": "italic",
              "fontWeight": "100 900",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/PlayfairDisplay-Italic.woff2"]
            }
          ]
        }
      ]
    }
  },
  "styles": {
    "blocks": {
      "core/paragraph": {
        "typography": {
          "fontSize": "clamp(1rem, 1.3rem, 4vw)"
        }
      }
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--primary)",
      "fontWeight": "300"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontSize": "clamp(2rem, 2.7rem, 8vw)",
          "fontWeight": "300"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontSize": "clamp(1rem, 2.3rem, 6vw)",
          "fontWeight": "300"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontSize": "clamp(1rem, 1.8rem, 5vw)",
          "fontWeight": "300"
        }
      },
      "link": {
        "color": {
          "text": "var:preset|color|contrast"
        },
        ":hover": {
          "color": {
            "text": "var:preset|color|button-purple"
          },
          "typography": {
            "textDecoration": "underline",
            "fontFamily": "var(--wp--preset--font-family--primary)",
            "fontSize": "clamp(1rem, 1.3rem, 5vw)",
            "fontWeight": "300"
          }
        },
        "typography": {
          "textDecoration": "none",
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontSize": "clamp(1rem, 1.3rem, 5vw)",
          "fontWeight": "300"
        }
      }
    }
  }
}

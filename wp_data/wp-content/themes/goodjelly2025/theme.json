{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "appearanceTools": true,
    "color": {
      "background": true,
      "link": true,
      "text": true,
      "custom": true,
      "customDuotone": true,
      "customGradient": false,
      "defaultDuotone": false,
      "defaultGradients": false,
      "defaultPalette": false,
      "palette": [
        {
          "color": "#ffffff",
          "name": "Base",
          "slug": "base"
        },
        {
          "color": "#3c3a41",
          "name": "Contrast",
          "slug": "contrast"
        },
        {
          "color": "#f8fbf3",
          "name": "Goodjelly Green",
          "slug": "goodjelly-green"
        },
        {
          "color": "#391255",
          "name": "Goodjelly Purple",
          "slug": "goodjelly-purple"
        },
        {
          "color": "#881788",
          "name": "Alt Purple",
          "slug": "alt-purple"
        },
        {
          "color": "#b6b0c5",
          "name": "Border Color",
          "slug": "border-color"
        },
        {
          "color": "#b8517f",
          "name": "Goodjelly Mauve",
          "slug": "goodjelly-mauve"
        },
	{
	  "color": "#fff7f5",
	  "name" : "Goodjelly Peach",
	  "slug" : "goodjelly-peach"
	}
      ]
    },
    "spacing": {
      "blockGap": true,
      "margin": true,
      "padding": true,
      "customSpacingSize": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "layout": {
      "contentSize": "1260px"
    },
    "typography": {
      "lineHeight": true,
      "fluid": true,
      "fontFamilies": [
        {
          "name": "Primary",
          "slug": "primary",
          "fontFamily": "'HK Grotesk', sans-serif",
          "fontFace": [
            {
              "fontFamily": "HK Grotesk",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/HankenGrotesk-VariableFont_wght.woff2"]
            },
                        {
              "fontFamily": "HK Grotesk",
              "fontStyle": "italic",
              "fontWeight": "100 900",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/HankenGrotesk-Italic-VariableFont_wght.woff2"]
            }
          ]
        },
        {
          "name": "Header",
          "slug": "header",
          "fontFamily": "'Playfair Display', serif",
          "fontFace": [
            {
              "fontFamily": "Playfair Display",
              "fontStyle": "normal",
              "fontWeight": "100 900",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/Playfair-Display.woff2"]
            },
                        {
              "fontFamily": "Playfair Display",
              "fontStyle": "italic",
              "fontWeight": "100 900",
              "fontDisplay": "swap",
              "src": ["file:./assets/fonts/PlayfairDisplay-Italic.woff2"]
            }
          ]
        }
      ]
    }
  },
  "styles": {
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--primary)"
    },
    "elements": {
      "h1": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontSize": "clamp(2rem, 2.7rem, 8vw)",
          "fontWeight": "300"
        }
      },
      "h2": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontSize": "clamp(1rem, 2.3rem, 6vw)",
          "fontWeight": "300"
        }
      },
      "h3": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontSize": "clamp(1rem, 1.8rem, 5vw)",
          "fontWeight": "300"
        }
      },
      "link": {
        "color": {
          "text": "var:preset|color|contrast"
        },
        ":hover": {
          "color": {
            "text": "var:preset|color|button-purple"
          },
          "typography": {
            "textDecoration": "underline",
            "fontFamily": "var(--wp--preset--font-family--primary)",
            "fontSize": "clamp(1rem, 1.3rem, 5vw)",
            "fontWeight": "300"
          }
        },
        "typography": {
          "textDecoration": "none",
          "fontFamily": "var(--wp--preset--font-family--primary)",
          "fontSize": "clamp(1rem, 1.3rem, 5vw)",
          "fontWeight": "300"
        }
      }
    }
  }
}
